.more-work
    %section
        %h2.s2 More work
        = link_to prev_link, :class => "previous no-button" do
            %ion-icon{:name => "arrow-back-outline"}
            .card-wrapper
                .card-details
                    %p.card-title
                        %strong= prev_card_title
                    %p.small= prev_company_year
                %img.lazy{:data => {:srcset => prev_srcset, :sizes => prev_sizes, :src => prev_src}, :alt => prev_alt}
        = link_to next_link, :class => "next no-button" do
            .card-wrapper
                %img.lazy{:data => {:srcset => next_srcset, :sizes => next_sizes, :src => next_src}, :alt => next_alt}
                .card-details
                    %p.card-title
                        %strong= next_card_title
                    %p.small= next_company_year
            %ion-icon{:name => "arrow-forward-outline"}

